<%- include('../partials/header', { title, admin, flash }) %>

<div class="admin-shell">
  <%- include('../partials/admin_sidebar') %>
  <div class="admin-content">
    <div class="admin-page-header">
      <div>
        <h1 class="admin-title">编辑卡密</h1>
        <div class="admin-subtitle">仅支持未售出卡密修改</div>
      </div>
      <a class="btn small" href="/admin/card-keys?product_id=<%= cardKey.product_id %>&status=available">返回卡密管理</a>
    </div>

    <div class="card">
      <form class="admin-form" method="post" action="/admin/card-keys/<%= cardKey.id %>/edit">
        <div class="field">
          <label class="label">卡密内容</label>
          <input class="input" name="code" value="<%= cardKey.code_plain %>" required>
        </div>
        <div class="btnrow">
          <input type="hidden" name="product_id" value="<%= cardKey.product_id %>">
          <button class="btn primary" type="submit">保存</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
