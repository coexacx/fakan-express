<%- include('../partials/header', { title, admin, flash }) %>

<div class="admin-shell">
  <%- include('../partials/admin_sidebar') %>
  <div class="admin-content">
    <div class="admin-page-header">
      <div>
        <h1 class="admin-title">后台管理</h1>
        <div class="admin-subtitle">概览与快捷入口</div>
      </div>
    </div>

    <div class="grid">
      <div class="card">
        <div class="card-title">商品数量</div>
        <div class="muted">已上架商品数量</div>
        <div class="price"><%= stats.products %></div>
        <div class="btnrow">
          <a href="/admin/products" class="btn">管理商品</a>
        </div>
      </div>
      <div class="card">
        <div class="card-title">可用卡密库存</div>
        <div class="muted">当前可售库存</div>
        <div class="price"><%= stats.availableKeys %></div>
        <div class="btnrow">
          <a href="/admin/products" class="btn">导入库存</a>
        </div>
      </div>
      <div class="card">
        <div class="card-title">待处理订单</div>
        <div class="muted">需要发货的订单</div>
        <div class="price"><%= stats.openOrders %></div>
        <div class="btnrow">
          <a href="/admin/orders" class="btn">查看订单</a>
        </div>
      </div>
      <div class="card">
        <div class="card-title">交易金额</div>
        <div class="muted">近 24 小时成交金额</div>
        <div class="price">￥<%= formatMoney(stats.todayRevenue) %></div>
      </div>
      <div class="card">
        <div class="card-title">总交易金额</div>
        <div class="muted">开业至今累计成交</div>
        <div class="price">￥<%= formatMoney(stats.totalRevenue) %></div>
      </div>
      <div class="card">
        <div class="card-title">总订单量</div>
        <div class="muted">开业至今成交订单</div>
        <div class="price"><%= stats.totalOrders %></div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
