<%- include('../partials/header', { title, admin, flash }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h1 class="h5 m-0">库存管理</h1>
    <div class="text-muted small">商品：<%= product.name %>（ID: <%= product.id %>）</div>
  </div>
  <a class="btn btn-sm btn-outline-secondary" href="/admin/products">返回商品列表</a>
</div>

<div class="row g-3 mb-3">
  <div class="col-12 col-md-4">
    <div class="card">
      <div class="card-body">
        <div class="text-muted small">可用</div>
        <div class="display-6"><%= stats.available %></div>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-4">
    <div class="card">
      <div class="card-body">
        <div class="text-muted small">预留</div>
        <div class="display-6"><%= stats.reserved %></div>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-4">
    <div class="card">
      <div class="card-body">
        <div class="text-muted small">已售</div>
        <div class="display-6"><%= stats.sold %></div>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <h2 class="h6">导入卡密</h2>
    <form method="post" action="/admin/products/<%= product.id %>/inventory/import">
      <div class="mb-3">
        <label class="form-label">卡密列表（每行一条）</label>
        <textarea class="form-control" name="codes" rows="10" placeholder="AAAA-BBBB-CCCC\nDDDD-EEEE-FFFF"></textarea>
        <div class="form-text">系统会自动去重（按同一商品的卡密内容）。</div>
      </div>
      <button class="btn btn-success" type="submit">导入</button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
