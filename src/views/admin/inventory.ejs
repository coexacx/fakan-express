<%- include('../partials/header', { title, admin, flash }) %>

<div class="admin-page-header">
  <div>
    <h1 class="admin-title">库存管理</h1>
    <div class="admin-subtitle">商品：<%= product.name %>（ID: <%= product.id %>）</div>
  </div>
  <a class="btn small" href="/admin/products">返回商品列表</a>
</div>

<div class="grid">
  <div class="card">
    <div class="card-title">可用</div>
    <div class="price"><%= stats.available %></div>
  </div>
  <div class="card">
    <div class="card-title">预留</div>
    <div class="price"><%= stats.reserved %></div>
  </div>
  <div class="card">
    <div class="card-title">已售</div>
    <div class="price"><%= stats.sold %></div>
  </div>
</div>

<div class="card admin-section">
  <h2 class="h2">导入卡密</h2>
  <form class="admin-form" method="post" action="/admin/products/<%= product.id %>/inventory/import">
    <div class="field">
      <label class="label">卡密列表（每行一条）</label>
      <textarea class="textarea" name="codes" rows="10" placeholder="AAAA-BBBB-CCCC\nDDDD-EEEE-FFFF"></textarea>
      <div class="help">系统会自动去重（按同一商品的卡密内容）。</div>
    </div>
    <div class="btnrow">
      <button class="btn success" type="submit">导入</button>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>
