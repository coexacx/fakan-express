<!doctype html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title ? title + ' - ' : '' %><%= siteSettings && siteSettings.site_title ? siteSettings.site_title : '发卡站' %></title>
  <% if (admin) { %>
    <link href="/static/admin.css" rel="stylesheet">
  <% } else { %>
    <link href="/static/public.css" rel="stylesheet">
  <% } %>
</head>
<body>
<header class="topbar <%= admin ? 'admin' : '' %>">
  <div class="wrap topbar-inner">
    <a class="brand" href="/"><%= siteSettings && siteSettings.site_title ? siteSettings.site_title : '发卡站' %></a>
    <div class="topbar-right">
      <% if (admin) { %>
        <a class="btn small" href="/admin">返回</a>
        <form method="post" action="/admin/logout" class="inline-form">
          <button class="btn small" type="submit">退出</button>
        </form>
      <% } else { %>
        <a class="btn" href="/admin/login">商家登录</a>
      <% } %>
    </div>
  </div>
</header>

<main class="wrap">
  <% if (flash) { %>
    <div class="alert alert-<%= flash.type %>"><%= flash.message %></div>
  <% } %>
