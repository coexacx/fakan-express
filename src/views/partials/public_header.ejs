<%
  const siteTitle = siteSettings && siteSettings.site_title ? siteSettings.site_title : '发卡站';
  const topBg = siteSettings && siteSettings.top_bg_color ? siteSettings.top_bg_color : '#f6f7fb';
  const middleBg = siteSettings && siteSettings.middle_bg_color ? siteSettings.middle_bg_color : '#f6f7fb';
  const cardBg = siteSettings && siteSettings.card_bg_color ? siteSettings.card_bg_color : '#ffffff';
  const footerBg = siteSettings && siteSettings.footer_bg_color ? siteSettings.footer_bg_color : '#f6f7fb';
  const middleBgImage = siteSettings && siteSettings.middle_bg_image_url ? siteSettings.middle_bg_image_url : '';
  const middleBgNormalized = String(middleBg || '').replace(/\s+/g, '').toLowerCase();
  const isTransparentRgba = () => {
    if (!middleBgNormalized.startsWith('rgba(') || !middleBgNormalized.endsWith(')')) {
      return false;
    }
    const parts = middleBgNormalized.slice(5, -1).split(',');
    if (parts.length !== 4) {
      return false;
    }
    const alpha = Number(parts[3]);
    return Number.isFinite(alpha) && alpha === 0;
  };
  const middleTransparent = middleBgNormalized === 'transparent'
    || middleBgNormalized === '#00000000'
    || middleBgNormalized === '#0000'
    || isTransparentRgba();
%>
<!doctype html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title ? title + ' - ' : '' %><%= siteTitle %></title>
  <link href="/static/public.css" rel="stylesheet">
  <style>
    :root{
      --topbar-bg:<%= topBg %>;
      --page-bg:<%= middleTransparent ? 'transparent' : middleBg %>;
      --card-bg:<%= cardBg %>;
      --footer-bg:<%= footerBg %>;
      --page-bg-image:<%= middleTransparent && middleBgImage ? `url('${middleBgImage}')` : 'none' %>;
    }
  </style>
</head>
<body class="public-page">
<header class="topbar">
  <div class="wrap topbar-inner">
    <a class="brand" href="/"><%= siteTitle %></a>
    <div class="topbar-right">
      <!-- 顾客端不显示任何后台/商家登录入口 -->
      <a class="btn" href="/query">订单查询</a>
    </div>
  </div>
</header>

<main class="wrap">
  <% if (flash) { %>
    <div class="alert alert-<%= flash.type || 'info' %>"><%= flash.message %></div>
  <% } %>
